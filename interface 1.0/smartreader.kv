<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    color: [0,0,0,1]
    background_color: 1, 1, 1, 1

<ScaleLabel@Label>:
    _scale: 1. if self.texture_size[0] < self.width else float(self.width) / self.texture_size[0]
    canvas.before:
        PushMatrix
        Scale:
            origin: self.center
            x: self._scale or 1.
            y: self._scale or 1.
    canvas.after:
        PopMatrix

<ScrollableLabel>:
    BackgroundLabel:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width - 10, None
        text: root.text




<Container>:
    left_page: left_page
    right_page: right_page
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1, 0.04
        Button:

            text: 'File'

        Button:
            text: 'View'

        Button:
            text: 'Navigation'

        Button:
            text: 'Bookmarks'


    BoxLayout:
        size_hint: 1, 0.04
        Button:
            text: '<-'
            on_release:
                root.change_text_l()
        Button:
            text: '->'
            on_release:
                root.change_text_r()

        Button:
            text: 'Add new bookmark'

        Button:
            text: '+'

        Button:
            text: '-'

        Button:
            text: 'Night mode'

    BoxLayout:
        size_hint: 1, 0.04
        Button:
            size_hint: 0.4, 1
            text: '<<'

        Button:
            size_hint: 0.4, 1
            text: '||'

        Button:
            size_hint: 0.4, 1
            text: '>>'

        ScaleLabel:
            size_hint: 0.2, 1
            text: '0:30/2:30'


        Slider:
            size_hint: 1.5, 1
            min: 0
            max: 100
            step: 1

        Button:
            size_hint: 0.5, 1
            text: 'Volume'

        Button:
            size_hint: 0.5, 1
            text: 'Go to book'

    BoxLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size



        ScrollableLabel:
            id: left_page
            text:
                root.set_text_l()

            text_size: self.size
            halign: 'left'
            valign: 'top'
            padding: (10,10)

        BackgroundLabel:
            background_color: 0, 0, 0, 1
            size_hint: 0.01, 1



        ScrollableLabel:
            id: right_page
            text:
                root.set_text_r()
            text_size: self.size
            halign: 'left'
            valign: 'top'
            padding: (10,10)




